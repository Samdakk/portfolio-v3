{
  "name": "portfolio-v3",
  "version": "1.0.0",
  "description": "Portfolio personal con efectos 3D y animaciones modernas",
  "main": "index.html",
  "homepage": "https://samdakk.github.io/Portafolio-v3",
  "scripts": {
    "start": "live-server",
    "dev": "concurrently \"npm run start\" \"npm run watch:css\"",
    "build": "npm run build:css && npm run build:js && npm run copy-files",
    "build:css": "postcss styles.css -o dist/styles.min.css",
    "build:js": "terser js/main.js -o dist/main.min.js",
    "copy-files": "shx mkdir -p dist && shx cp index.html dist/ && shx cp -r sections dist/ && shx cp -r js dist/ && shx cp fonts.html dist/",
    "watch:css": "postcss styles.css -o dist/styles.min.css --watch",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "analyze": "webpack-bundle-analyzer",
    "audit": "npm audit fix",
    "security": "snyk test",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "keywords": [
    "portfolio",
    "3d",
    "animation",
    "web-development"
  ],
  "author": "Lucas Vazquez",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.3.1",
    "autoprefixer": "^10.4.17",
    "browser-sync": "^3.0.2",
    "concurrently": "^8.2.2",
    "cssnano": "^6.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "gh-pages": "^6.1.1",
    "jest": "^29.7.0",
    "live-server": "^1.2.0",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.35",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.2.5",
    "shelljs": "^0.9.2",
    "shx": "^0.4.0",
    "tailwindcss": "^3.4.1",
    "terser": "^5.27.0",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "dependencies": {
    "gsap": "^3.12.5",
    "three": "^0.161.0"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.6.7"
  }
}
